@page "/tasks/delete/{id:int}"
@model ToDoList.Pages.Tasks.DeleteTaskModel
<h1>Delete task</h1>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h3>Are you Sure you want to delete "@Model.DeleteToDoTask.Name" task? </h3>

            <a asp-page="ViewAllTasks" class="btn btn-success">Cancel</a>
            <button asp-page-handler="delete" class="btn btn-danger">Delete</button>
        </form>

    </div>
</div>
